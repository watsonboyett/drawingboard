<?php
    $img = $_REQUEST['img'];
    $name = $_REQUEST['name'];
    $imge = explode('base64,', $img);
    $dir = './drawing_saves/';
    $imgd = base64_decode($imge[1]);
    file_put_contents("{$dir}{$name}", $imgd);
    
    $w = 600;
    $h = 500;
    $img = imagecreatefrompng("{$dir}{$name}");
    $imgcr = imagecreatetruecolor($w, $h);
    imagecopy($imgcr,$imgd, 0, 0, 100, 50, $w, $h);
?>
